<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt Text"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter text to encrypt:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPlainText"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Type your text here..."
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select matrix size:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerMatrixSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="20dp" />

        <!-- 2x2 Matrix Input -->
        <LinearLayout
            android:id="@+id/grid2x2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter 2x2 Key Matrix:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et2x2_11"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="5dp" />

                <EditText
                    android:id="@+id/et2x2_12"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et2x2_21"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="5dp" />

                <EditText
                    android:id="@+id/et2x2_22"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 3x3 Matrix Input -->
        <LinearLayout
            android:id="@+id/grid3x3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter 3x3 Key Matrix:"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et3x3_11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et3x3_21"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_22"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_23"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et3x3_31"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_32"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />

                <EditText
                    android:id="@+id/et3x3_33"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="."
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnEncryptNow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Encrypt"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvEncryptedResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypted text will appear here..."
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/result_border"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCopyEncrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Encrypted Text"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>