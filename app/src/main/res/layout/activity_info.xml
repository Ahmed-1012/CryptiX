<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_with_texture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About CryptiX"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp" />

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Description"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CryptiX is a secure encryption app that uses the Hill Cipher algorithm to protect your messages. It supports both 2x2 and 3x3 matrix keys for flexible security options."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- How to Use -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Use"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Select Encrypt/Decrypt from main menu\n• Choose matrix size (2x2 or 3x3)\n• Enter your key matrix values\n• Type your text and process\n• Use copy button to share results"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Hill Cipher Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Hill Cipher"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Invented by Lester S. Hill in 1929\n• Uses linear algebra for encryption\n• Encryption: C = (P × K) mod 26\n• Decryption: P = (C × K⁻¹) mod 26\n• Secure against frequency analysis"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Key Requirements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Requirements"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Key matrix must be invertible\n• Determinant ≠ 0\n• Works with A-Z letters only\n• Non-alphabet characters are removed\n• Text is automatically padded with 'X'"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CryptiX v2.0\nDeveloped by Algo\nBuilt with Android Studio &amp; Kotlin\nThe app icon was created by NEVARA\nMake sure to enjoy using the app ❤"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</ScrollView>